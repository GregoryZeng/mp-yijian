.page {
  display: flex;
  flex-direction: column;
}
.scrollable_view {
  height: 1100rpx;
  width: 700rpx;
  margin: 20rpx auto 10rpx;
  border: 5rpx solid #000000;
  border-radius: 30rpx;
}
.scrollable_view .template_grid {
  display: grid;
  grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
  -webkit-column-gap: 10rpx;
          column-gap: 10rpx;
  row-gap: 20rpx;
}
.scrollable_view .template_grid .template_item .template_thumbnail {
  max-width: 100%;
}
.scrollable_view .template_grid .template_item .template_desc {
  display: block;
  text-align: center;
  position: relative;
}
.scrollable_view .template_grid .template_item .template_desc text {
  display: inline-block;
  padding: 10rpx 30rpx 10rpx 30rpx;
  color: #000000;
  background: #eda91d;
  border: 5rpx solid #000000;
  border-radius: 20rpx;
}
.scrollable_view .template_grid .template_item .template_desc .palm {
  max-width: 85rpx;
  position: absolute;
  bottom: 10rpx;
  left: 5rpx;
  top: -205rpx;
}
.scrollable_view .scrollable_bottom {
  padding-top: 60rpx;
  padding-bottom: 40rpx;
  text-align: center;
}
.tabbar {
  display: flex;
  gap: 20rpx;
}
.tabbar_elem {
  flex-basis: 0;
  flex-grow: 1;
  color: #000000;
  background: #f8dbe2;
  border: 5rpx solid #000000;
  border-radius: 30rpx;
}
.tabbar_elem_selected {
  background: #f397a7;
}

